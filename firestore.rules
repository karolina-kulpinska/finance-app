rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /payments/{paymentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.userId;
      
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.userId;
      
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.userId;
    }

    match /shopping/{shoppingId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.userId;
      
      allow update: if request.auth != null 
                    && request.auth.uid == resource.data.userId;
      
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.userId;
    }
    
    // ========================================
    // NOWE REGUŁY (dla nowej struktury + rodziny)
    // ========================================
    
    // RODZINY
    match /families/{familyId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null 
                             && request.auth.uid == resource.data.ownerId;
    }
    
    // UŻYTKOWNICY - nowa struktura
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Płatności w nowej strukturze (załączniki tylko dla planu Pro)
      match /payments/{paymentId} {
        allow read, delete: if request.auth != null && request.auth.uid == userId;
        allow create, update: if request.auth != null && request.auth.uid == userId
          && (request.resource.data.get("attachmentUrl", null) == null
              || (exists(/databases/$(database)/documents/users/$(request.auth.uid))
                  && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get("plan", "free") == "pro"));
      }
      
      // Listy zakupów w nowej strukturze
      match /shoppingLists/{listId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Ustawienia
      match /settings/{settingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rozszerzenie Stripe (Run Payments with Stripe) – products + customers
    match /products/{productId} {
      allow read: if request.auth != null;
    }
    match /customers/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      match /checkout_sessions/{sessionId} {
        allow read, create: if request.auth != null && request.auth.uid == userId;
      }
      match /subscriptions/{subId} {
        allow read: if request.auth != null && request.auth.uid == userId;
      }
      match /payments/{paymentId} {
        allow read: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
